@require './theme.styl'
@require '~vuetify/src/stylus/app.styl'
@require '~vuetify/src/stylus/components/_lists.styl'
@require './main.css'

#app
  h1
    @extend .display-2
    @extend .mt-3
  h2
    @extend .headline
    @extend .mt-3
  h3
    @extend .title
    @extend .mt-3
  h4
    @extend .subheading
    @extend .mt-2
  h5, h6
    @extend .body-2
    @extend .mt-1

  .container
    max-width: 1280px;
    ul
      @extend .list
      li
        line-height: 1.5rem
        padding: 5px
        margin: 0
        background: inherit
        border-bottom: 1px solid #e0e0e0
      li:last-child
        border-bottom: none

  .vue-js-switch .v-switch-core[data-v-8e1836c0]:before
    z-index: 1
